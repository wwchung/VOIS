<WebScreen>:
	BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
	    orientation: 'vertical'
        Label:
            text: 'Web'
            font_size: '56sp'
            color: (1, 0.796875, 0.0234375, 1)
        Button:
            text: 'Search web for {query}'
            font_size: '45sp'


<ResultScreen>:
    on_pre_enter: root.reset_buttons()
	BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: box
		orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Search Results'
                font_size: '45sp'
                color: (1, 0.796875, 0.0234375, 1)
            Label:
                text: '\"Open result number {number}\"'
                font_size: '20sp'
