<EmailScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Email'
            font_size: '56sp'
            color: (1, 0.796875, 0.0234375, 1)
        Button:
            text: 'Open email inbox'
            font_size: '34sp'
        Button:
            text: 'Open sent mail'
            font_size: '34sp'
        Button:
            text: 'Compose email to {contact} with subject {subject}\nand message {message}'
            font_size: '34sp'
            halign: 'center'

<InboxScreen>:
    on_pre_enter: root.reset_buttons()
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: box
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Inbox'
                font_size: '45sp'
                color: (1, 0.796875, 0.0234375, 1)
            Label:
                text: '\"Open email number {number}\"'
                font_size: '20sp'
                halign: 'center'


<SentScreen>:
    on_pre_enter: root.reset_buttons()
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: box
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Sent Mail'
                font_size: '45sp'
                color: (1, 0.796875, 0.0234375, 1)
            Label:
                text: '\"Open email number {number}\"'
                font_size: '20sp'


<MessageScreen>:
    on_pre_enter: root.reset_widgets()
    GridLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: body_grid
        cols: 1
        GridLayout:
            id: header_grid
            cols: 2
            size_hint: (1, None)
            height: 240


<ComposeScreen>:
    on_pre_enter: root.reset_widgets()
    GridLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: body_grid
        cols: 1
        GridLayout:
            id: header_grid
            cols: 2
            size_hint: (1, None)
            height: 240