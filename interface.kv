<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'VOIS'
                font_size: '45sp'
            Label:
                text: 'Use voice commands anywhere in the app\n\n\"Open {feature}\"'
                font_size: '20sp'
                halign: 'center'
        Button:
            font_size: '34sp'
            text: 'Phone'
        Button:
            font_size: '34sp'
            text: 'Email'
        Button:
            font_size: '34sp'
            text: 'Document'
        Button:
            font_size: '34sp'
            text: 'Web Search'


<LoadingScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Loading...'
            font_size: '56sp'


<PhoneScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Phone'
                font_size: '45sp'
            Label:
                text: '\"Call {number}\"\n\"Text {number} that {message}\"'
                font_size: '20sp'
                halign: 'center'
        Button:
            text: 'Call'
            font_size: '45sp'
        Button:
            text: 'Text'
            font_size: '45sp'


<CallScreen>:
    on_pre_enter: root.reset_label()
    BoxLayout:
        id: box
        orientation: 'vertical'


<TextScreen>:
    on_pre_enter: root.reset_label()
    BoxLayout:
        id: box
        orientation: 'vertical'


<EmailScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Email'
                font_size: '45sp'
            Label:
                text: '\"Open inbox\"\n\"Open sent mail\"'
                font_size: '20sp'
                halign: 'center'
        Button:
            text: 'Compose'
            font_size: '45sp'
        Button:
            text: 'Inbox'
            font_size: '45sp'
        Button:
            text: 'Sent mail'
            font_size: '45sp'


<InboxScreen>:
    on_pre_enter: root.reset_buttons()
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Inbox'
                font_size: '45sp'
            Label:
                text: '\"Open message {number}\"'
                font_size: '20sp'
                halign: 'center'


<SentScreen>:
    on_pre_enter: root.reset_buttons()
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Sent Mail'
                font_size: '45sp'
            Label:
                text: '\"Open message {number}\"'
                font_size: '20sp'


<MessageScreen>:
    on_pre_enter: root.reset_widgets()
    GridLayout:
        id: body_grid
        cols: 1
        GridLayout:
            id: header_grid
            cols: 2
            size_hint: (1, None)
            height: 240


<ComposeScreen>:
    GridLayout:
        cols: 1
        rows: 3
        BoxLayout:
            size_hint: (.1, None)
            height: 60
            Button:
                text: 'Back'
                size_hint: (.3, None)
                height: 60
                font_size: '32sp'
                on_release:
                    root.manager.transition.direction = 'right'
                    root.go_back()
            Button:
                text: 'Send'
                size_hint: (.7, None)
                height: 60
                font_size: '32sp'
                on_release:
                    root.send_email()
        GridLayout:
            size_hint: (.1, None)
            height: 120
            cols: 2
            rows: 2
            Label:
                size_hint: (.2, None)
                height: 60
                font_size: '32sp'
                text: 'To: '
            TextInput:
                id: to_id
                size_hint: (.2, None)
                height: 60
                font_size: '32sp'
                text: ''
            Label:
                size_hint: (.2, None)
                height: 60
                font_size: '32sp'
                text: 'Subject: '
            TextInput:
                id: subject_id
                size_hint: (.8, None)
                height: 60
                font_size: '32sp'
                text: ''
        TextInput:
            id: body_id
            text: ''


