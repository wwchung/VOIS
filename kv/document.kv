<documentHomeScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.15625, 0.30078125, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Document'
            font_size: '56sp'
            color: (1, 0.796875, 0.0234375, 1)
        Button:
            font_size: '34sp'
            text: 'Create document {name} in folder {name}'
        Button:
            font_size: '34sp'
            text: 'Search for documents in folder {name}'
        Button:
            font_size: '34sp'
            text: 'Search recent documents'

